{
  "name": "aiew",
  "version": "2.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "bash scripts/dev.sh",
    "start": "bash scripts/start.sh",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:ai": "poetry --directory apps/ai-server run ruff format .",
    "lint": "pnpm lint:node && pnpm lint:ai",
    "lint:node": "eslint \"apps/**/*.{ts,tsx}\" --fix",
    "lint:ai": "poetry --directory apps/ai-server run ruff check . --fix",
    "build": "pnpm --filter \"./apps/**\" build",
    "test:local": "pnpm -r --stream --if-present run test:local",
    "test:ci": "pnpm -r --stream --if-present run test:ci",
    "typecheck": "pnpm -r --if-present run typecheck",
    "prepare": "husky",
    "release": "bash scripts/release.sh"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "apps/ai-server/**/*.py": [
      "poetry --directory apps/ai-server run ruff format",
      "poetry --directory apps/ai-server run ruff check . --fix"
    ],
    "**/*.{js,jsx,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.2",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.1.11",
      "@types/react": "19.2.4",
      "@types/react-dom": "19.2.3",
      "hono": ">=4.11.7",
      "valibot@>=0.31.0 <1.2.0": ">=1.2.0",
      "express@>=5.0.0 <5.2.0": ">=5.2.0",
      "@modelcontextprotocol/sdk": ">=1.26.0",
      "jws@=4.0.0": ">=4.0.1",
      "qs": ">=6.14.2",
      "diff@<8.0.3": ">=8.0.3",
      "lodash": ">=4.17.23",
      "fast-xml-parser": ">=5.3.4",
      "@isaacs/brace-expansion": ">=5.0.1"
    },
    "onlyBuiltDependencies": [
      "@prisma/engines",
      "esbuild",
      "prisma",
      "protobufjs",
      "sharp",
      "unrs-resolver"
    ]
  }
}
